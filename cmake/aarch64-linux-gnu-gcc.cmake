set(CMAKE_SYSTEM_NAME Linux)
set(CMAKE_SYSTEM_PROCESSOR aarch64)

set(CMAKE_LIBRARY_ARCHITECTURE aarch64-linux-gnu)
set(CMAKE_FIND_ROOT_PATH /usr/${CMAKE_LIBRARY_ARCHITECTURE})
set(CMAKE_FIND_ROOT_PATH_MODE_PROGRAM NEVER) # (/usr/bin/)
set(CMAKE_FIND_ROOT_PATH_MODE_INCLUDE ONLY)  # (/usr/aarch64-linux-gnu/include/)
set(CMAKE_FIND_ROOT_PATH_MODE_LIBRARY ONLY)  # (/usr/aarch64-linux-gnu/lib/)
set(CMAKE_FIND_ROOT_PATH_MODE_PACKAGE ONLY)  # (/usr/aarch64-linux-gnu/lib/)

set(TOOLCHAIN /usr/bin)
set(CMAKE_C_COMPILER ${TOOLCHAIN}/${CMAKE_LIBRARY_ARCHITECTURE}-gcc)
set(CMAKE_C_AR ${TOOLCHAIN}/${CMAKE_LIBRARY_ARCHITECTURE}-ar)
set(CMAKE_C_RANLIB ${TOOLCHAIN}/${CMAKE_LIBRARY_ARCHITECTURE}-ranlib)
set(CMAKE_CXX_COMPILER ${TOOLCHAIN}/${CMAKE_LIBRARY_ARCHITECTURE}-g++)
set(CMAKE_CXX_AR ${TOOLCHAIN}/${CMAKE_LIBRARY_ARCHITECTURE}-ar)
set(CMAKE_CXX_RANLIB ${TOOLCHAIN}/${CMAKE_LIBRARY_ARCHITECTURE}-ranlib)
set(CMAKE_CROSSCOMPILING_EMULATOR ${TOOLCHAIN}/qemu-${CMAKE_SYSTEM_PROCESSOR})
